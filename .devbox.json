{
  "packages": [
    "sbcl",
    "racket",
    "mit-scheme",
    "guile",
    "chicken",
    "pandoc",
    "lefthook",
    "sponge",
    "ripgrep",
    "fd",
    "jq"
  ],
  "shell": {
    "init_hook": [
      "echo 'ðŸ”¬ Athena Prolog Development Environment'",
      "echo '========================================='",
      "echo ''",
      "echo 'Available Commands:'",
      "echo '  make help              - Show build system help'",
      "echo '  make test-fast         - Quick test with default implementations'", 
      "echo '  make test              - Test all available implementations'",
      "echo '  make benchmark         - Run performance benchmarks'",
      "echo '  make format            - Format source code'",
      "echo '  make docs              - Generate documentation'",
      "echo ''",
      "echo 'Available Implementations:'",
      "make list-impls 2>/dev/null || true",
      "echo ''",
      "echo 'Ready for development! ðŸš€'",
      "echo ''"
    ],
    "scripts": {
      "test": "make test-fast",
      "test-all": "make test",
      "bench": "make benchmark",
      "format": "make format",
      "docs": "make docs",
      "clean": "make clean",
      "setup": "lefthook install && echo 'Git hooks installed'"
    }
  },
  "env": {
    "ATHENA_DEV": "1",
    "SCHEME_IMPLEMENTATIONS": "racket guile chicken",
    "CL_IMPLEMENTATIONS": "sbcl",
    "EDITOR": "code"
  }
}